<h4>User info</h4>
<%= image_tag user.get_profile_image(100,100) %>
<p>name:<%= book.user.name %></p>
<p>introduction:<%= book.user.introduction</p>




<h1>New book</h1>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %><br>
<% end %>